<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register | Customer Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 font-sans">

    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-2xl shadow-xl border border-gray-100">

            {{-- Header --}}
            <div class="text-center">
                <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">
                    Create Account
                </h1>
                <p class="mt-2 text-sm text-gray-500">
                    Join the platform to start managing operations
                </p>
            </div>

            {{-- Registration Form --}}
            <form method="POST" action="{{ route('auth.register.store') }}" class="mt-8 space-y-5">
                {{ csrfField() }}

                {{-- Full Name --}}
                <div class="flex flex-col gap-1.5">
                    <label for="fullName" class="text-sm font-semibold text-gray-700">Full Name</label>
                    <input type="text" name="fullName" id="fullName" 
                        value="{{ old('fullName') || '' }}"
                        class="px-4 py-2.5 bg-gray-50 border rounded-lg outline-none transition-all focus:ring-2 focus:ring-blue-500 focus:bg-white {{ flashMessages.has('errors.fullName') ? 'border-red-500' : 'border-gray-200' }}" />
                    @if(flashMessages.has('errors.fullName'))
                    <span class="text-xs text-red-600 font-medium">{{ flashMessages.get('errors.fullName') }}</span>
                    @end
                </div>

                {{-- Email --}}
                <div class="flex flex-col gap-1.5">
                    <label for="email" class="text-sm font-semibold text-gray-700">Email Address</label>
                    <input type="email" name="email" id="email" 
                        value="{{ old('email') || '' }}"
                        class="px-4 py-2.5 bg-gray-50 border rounded-lg outline-none transition-all focus:ring-2 focus:ring-blue-500 focus:bg-white {{ flashMessages.has('errors.email') ? 'border-red-500' : 'border-gray-200' }}" />
                    @if(flashMessages.has('errors.email'))
                    <span class="text-xs text-red-600 font-medium">{{ flashMessages.get('errors.email') }}</span>
                    @end
                </div>

                {{-- Password --}}
                <div class="flex flex-col gap-1.5">
                    <label for="password" class="text-sm font-semibold text-gray-700">Password</label>
                    <input type="password" name="password" id="password" 
                        class="px-4 py-2.5 bg-gray-50 border rounded-lg outline-none transition-all focus:ring-2 focus:ring-blue-500 focus:bg-white {{ flashMessages.has('errors.password') ? 'border-red-500' : 'border-gray-200' }}" />
                    @if(flashMessages.has('errors.password'))
                    <span class="text-xs text-red-600 font-medium">{{ flashMessages.get('errors.password') }}</span>
                    @end
                </div>

                {{-- Submit Button --}}
                <div class="pt-4">
                    <button type="submit"
                        class="w-full py-2 px-4 bg-gray-400 hover:bg-gray-500 text-white font-medium rounded-lg transition mt-2">
                        Register Now
                    </button>
                </div>

                {{-- Footer --}}
                <p class="mt-5 text-center text-sm text-gray-500">
                    Already have an account?
                    <a href="{{ route('auth.login.show') }}" class="text-gray-700 font-semibold hover:underline">
                        Sign In
                    </a>
                </p>
            </form>
        </div>
    </div>

</body>

</html>