</div>

<script>
  function updatePermissionPreview(roleId) {
    const select = document.getElementById('role-select')
    const selected = select.querySelector(`option[value="${roleId}"]`)
    const preview = document.getElementById('permission-preview')

    if (!selected) return

    const permissions = JSON.parse(selected.dataset.permissions || '[]')

    if (permissions.length === 0) {
      preview.innerHTML = '<span class="text-orange-300 text-xs italic">No permissions for this role</span>'
      return
    }

    preview.innerHTML = permissions.map(p => `
      <span class="px-3 py-1 rounded-full text-xs font-semibold bg-orange-100 text-orange-600">
        ${p}
      </span>
    `).join('')
  }

  document.addEventListener('DOMContentLoaded', () => {
    const select = document.getElementById('role-select')
    updatePermissionPreview(select.value)
  })
</script>

