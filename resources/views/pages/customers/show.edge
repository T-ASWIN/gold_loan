<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @vite(['resources/css/app.css', 'resources/js/app.js'])
</head>

<body
    class="bg-slate-100 font-sans antialiased text-slate-900 h-screen flex items-center justify-center overflow-hidden px-4">

    <div
        class="w-full max-w-5xl bg-white rounded-[2rem] border border-slate-200 shadow-xl overflow-hidden flex flex-col max-h-[95vh]">

        <div class="relative bg-slate-900 px-6 py-4 text-white shrink-0">
            <div class="absolute top-0 right-0 -mt-10 -mr-10 w-48 h-48 bg-indigo-500/20 rounded-full blur-2xl"></div>

            <div class="flex items-center gap-4 relative z-10">
                <div
                    class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-400 to-indigo-600 flex items-center justify-center shadow-lg border-2 border-slate-800">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                </div>
                <div>
                    <h1 class="text-2xl font-bold tracking-tight mb-0.5 capitalize">{{ customer.name }}</h1>
                    <p class="text-indigo-200 text-xs font-semibold tracking-wide uppercase">Customer Profile</p>
                </div>
            </div>
        </div>

        <div class="p-6 space-y-10">

            <div >
                <div class="mb-2">
                    <h2 class="text-[11px] font-bold uppercase tracking-widest text-slate-400 px-1">Customer Details
                    </h2>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                    <div class="flex flex-col min-w-0 p-3 bg-slate-50 rounded-xl border border-slate-100">
                        <span class="text-[11px] font-bold uppercase text-slate-500 tracking-wider mb-1">Email
                            Address</span>
                        <span class="text-slate-800 text-sm font-semibold truncate">{{ customer.email }}</span>
                    </div>

                    <div class="flex flex-col p-3 bg-slate-50 rounded-xl border border-slate-100">
                        <span class="text-[11px] font-bold uppercase text-slate-500 tracking-wider mb-1">Phone
                            Number</span>
                        <span class="text-slate-800 text-sm font-semibold">{{ customer.phoneNumber }}</span>
                    </div>

                    <div class="flex flex-col p-3 bg-slate-50 rounded-xl border border-slate-100">
                        <span class="text-[11px] font-bold uppercase text-slate-500 tracking-wider mb-1">Address</span>
                        <span class="text-slate-800 text-sm font-semibold leading-snug truncate">{{ customer.address
                            }}</span>
                    </div>
                </div>
            </div>

            <div>
                <div class="mb-2">
                    <h2 class="text-[11px] font-bold uppercase tracking-widest text-slate-400 px-1">Comments</h2>
                </div>

                @if(customer.commends.length)
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                    @each(commend in customer.commends)
                    <div class="p-3 bg-slate-50 border-l-4 border-indigo-400 rounded-r-xl rounded-l-sm shadow-sm">
                        <p class="text-slate-700 text-sm leading-relaxed">
                            {{ commend.commendName }}
                        </p>
                    </div>
                    @endeach
                </div>
                @else
                <div class="py-4 text-center bg-slate-50 rounded-xl border border-dashed border-slate-200">
                    <p class="text-slate-400 text-xs italic">No comments recorded yet.</p>
                </div>
                @endif
            </div>

            <div>
                <div class="mb-3">
                    <h2 class="text-[11px] font-bold uppercase tracking-widest text-slate-400 px-1">Pledge Images</h2>
                </div>

                @if(customer.pledgeCards.length)
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    @each(card in customer.pledgeCards)
                    <div class="group relative">
                        <div
                            class="relative h-28 w-full overflow-hidden rounded-xl border border-slate-200 bg-slate-50 shadow-sm ring-2 ring-transparent group-hover:ring-indigo-300 transition-all duration-300 cursor-pointer">
                            <img src="{{ asset(card.pledgeCard) }}"
                                class="preview-image h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
                                alt="Pledge Card" />
                            <div class="absolute inset-0 shadow-[inset_0_0_10px_rgba(0,0,0,0.05)] pointer-events-none">
                            </div>
                        </div>
                    </div>
                    @endeach
                </div>
                @else
                <div class="bg-slate-50 rounded-xl p-6 text-center border-2 border-dashed border-slate-200">
                    <p class="text-slate-500 text-sm font-medium">No digital assets uploaded.</p>
                </div>
                @endif
            </div>

        </div>
    </div>

    <div id="imageModal"
        class="fixed inset-0 bg-slate-950/95 backdrop-blur-md hidden items-center justify-center z-50 p-6 opacity-0 transition-all duration-300">
        <button id="closeBtn"
            class="absolute top-8 right-8 text-white/50 hover:text-white">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
        <img id="modalImage"
            class="max-w-full max-h-[85vh] object-contain rounded-lg shadow-2xl border border-white/10" />
    </div>

    
</body>

</html>