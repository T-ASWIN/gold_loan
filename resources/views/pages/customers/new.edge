    <script>
        let commandCount = 1;

        function addCommandField(value = '') {
            commandCount++;
            const container = document.getElementById('command-container');
            const div = document.createElement('div');
            div.className = "flex items-center gap-2 group";

            div.innerHTML = `
                <input type="text" name="commands[]" value="${value}" placeholder="Command ${commandCount}"
                    class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-500 transition-all">
                <button type="button" onclick="removeCommand(this)"
                    class="p-3 text-slate-400 hover:text-red-500 bg-slate-50 rounded-lg border border-slate-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                </button>
            `;
            container.appendChild(div);
        }

        function removeCommand(button) {
            button.parentElement.remove();
        }
    </script>
